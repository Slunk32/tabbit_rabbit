<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><a class="tab_name" href="#" id="tab_<%= @tab.id %>" data-id="<%= @tab.id %>"><%= @tab.name %></a></h3>
	</div>
	<div class="panel-body">
		<% @tab.items.each do |item| %>
		<ul class="list-group">
			<%= erb :'tab/_item', locals: {item: item} %>
		</ul>
		<% end %>
	</div>
</div>
<div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<span class="rabbits-list">
	<% @rabbits.each.with_index do |rabbit, index| %>
		<%= erb :'rabbit/_rabbit', locals: {rabbit: rabbit, color: COLOR_CLASSES[index], user: @user} %>
	<% end%>
	</span>
</div>
<div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12">
<!-- Button trigger modal -->
	<button type="button" class="btn btn-warning btn-lg add_user" data-toggle="modal" data-target="#addModal">
	  Add Someone
	</button>
	<form class="form-horizontal" id="save_tab" action='/tab/<%= @tab.id %>' method='post'>
		<input type="hidden" name="_method" value="put" />
		<button type="submit" class="btn btn-success btn-lg save_tab" value="submit">
	  	Save
		</button>
	</form>
</div>
<!-- Modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addSomeone" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="addSomeone">Add Someone</h4>
      </div>
      <div class="modal-body">
      	<%= erb :'rabbit/_new', locals: {unused_rabbits: @unused_rabbits, tab: @tab} %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success save_rabbit">Add</button>
      </div>
    </div>
  </div>
</div>